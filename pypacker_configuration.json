{
    "build_tool": "pyinstaller",
    "app_name": "easyplotter",
    "logo": "resources/icons/IAV_Logo_B1.ico",
    "main": [
        "easyplotter/__main__.py"
    ],
    "additional_options": {
        "easyplotter/__main__.py": [
            "--contents-directory bin"
        ]
    },
    "requirements": [
        "requirements/requirements_project.txt"
    ],
    "data_files": [
        {
            "src": "doc/easyplotter_user_docu.pdf",
            "dst": "doc/easyplotter_user_docu.pdf"
        },
        {
            "src": "doc/easyplotter_api_docu",
            "dst": "doc/easyplotter_api_docu"
        },
        {
            "src": "doc/README.html",
            "dst": "doc/README.html"
        },
        {
            "src": "doc/CHANGELOG.html",
            "dst": "doc/CHANGELOG.html"
        },
        {
            "src": "setup/ServiceDesk.bat",
            "dst": "ServiceDesk.bat"
        }
    ]
}
